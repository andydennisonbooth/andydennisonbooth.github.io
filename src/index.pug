doctype html
html
  head
    meta(charset='utf-8')

    link(rel='stylesheet' href='scss/style.scss')

    link(rel='shortcut icon' href='assets/img/AB_logo.png')
    title Andrew Booth

  body
    main

      each project in projects
        .project
          .image
            a(href=project.live_link target='_blank')
              img(src=project.image_url)

          .details
            a(href=project.live_link target='_blank')
              h2= project.title

            p !{project.description}

    footer &copy; 2019 Andrew Booth
